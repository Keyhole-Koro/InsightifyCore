{
  "name": "Insightify Dev",
  "image": "mcr.microsoft.com/devcontainers/go:1-1.24-bookworm",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "REPOS_ROOT": "/workspaces/${localWorkspaceFolderBasename}/repos",
    "GOFLAGS": "-mod=mod",
    "GOMODCACHE": "/workspaces/${localWorkspaceFolderBasename}/.gocache/mod",
    "GOCACHE": "/workspaces/${localWorkspaceFolderBasename}/.gocache/build",
    "XDG_CACHE_HOME": "/workspaces/${localWorkspaceFolderBasename}/.gocache/xdg"
  },
  "mounts": [],
  "postCreateCommand": "bash -lc 'mkdir -p .gocache/mod .gocache/build .gocache/xdg && if [ -f go.mod ]; then go mod download; fi && go install github.com/go-delve/delve/cmd/dlv@latest'",
  "postStartCommand": "bash -lc 'mkdir -p .gocache/mod .gocache/build .gocache/xdg && chown -R vscode:vscode .gocache'",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": true,
        "go.testExplorer.discoveryMode": "workspace",
        "editor.formatOnSave": true
      }
    }
  }
}